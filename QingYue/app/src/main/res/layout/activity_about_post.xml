<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_qingyue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ACDDBE"
        android:gravity="center"
        android:text="帖子详情"
        android:textSize="25sp">

    </TextView>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round"
        android:scaleType="fitXY"
        android:src="@drawable/previous_page">

    </ImageButton>

    <RelativeLayout
        android:id="@+id/all_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_qingyue">

        <RelativeLayout
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/head_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp">

            </ImageView>

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textSize="20sp"
                android:visibility="invisible">

            </TextView>

            <TextView
                android:id="@+id/postid"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/head_picture"
                android:gravity="center"
                android:textSize="20sp"
                android:visibility="invisible">

            </TextView>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/head_picture"
                android:gravity="center"
                android:textColor="#ACDDBE"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/username"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="@color/gray">

            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="15sp">

        </TextView>



        <RelativeLayout
            android:id="@+id/song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAEAEA"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_below="@id/post_content">


            <ImageView
                android:id="@+id/song_picture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

            </ImageView>

            <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/singer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/song_name"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="15sp">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAEAEA"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_below="@id/post_content">


            <ImageView
                android:id="@+id/singer_picture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

            </ImageView>


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:rotation="0"
                android:textColor="@color/black"
                android:textSize="20sp">

            </TextView>
        </RelativeLayout>
    </RelativeLayout>



    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#CDCDCD"
        android:layout_below="@+id/all_post">

    </View>

    <TextView
        android:id="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="评论"
        android:textColor="@color/teal_700"
        android:textSize="35sp">

    </TextView>

    <ListView
        android:id="@+id/list_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_below="@+id/comment_name"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp">

    </ListView>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CDCDCD"
        android:layout_above="@+id/bottons">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/bottons"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/repost"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="repostPost">
            <ImageButton
                android:id="@+id/repost_picture"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/report">

            </ImageButton>

            <TextView
                android:id="@+id/repost_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/repost_picture"
                android:textColor="@color/lightgray"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="15sp"
                android:gravity="center">

            </TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/comment"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/comment_picture"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/commend">

            </ImageView>

            <TextView
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/comment_picture"
                android:textColor="@color/lightgray"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="15sp"
                android:gravity="center">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/like"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="likePost">

            <ImageButton
                android:id="@+id/like_picture"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/like">

            </ImageButton>

            <TextView
                android:id="@+id/like_num"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/like_picture"
                android:textColor="@color/lightgray"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:textSize="15sp"
                android:gravity="center">

            </TextView>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>