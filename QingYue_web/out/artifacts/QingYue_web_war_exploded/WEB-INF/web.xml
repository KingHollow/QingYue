    <filter><!--filter类路径配置-->
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.javaweb.qingyue.filter.EncodingFilter</filter-class><!-- 全路径 从根包开始一直到类名 -->
    </filter>
    <filter-mapping><!--filter类映射配置-->
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern><!-- /* 即为过滤所有 -->
    </filter-mapping>

